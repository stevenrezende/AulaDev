		// TODO Auto-generated method stub
		
				 String nome1=  "Antonio"; 
				 String nome2= " Paulo";
				 String nome3= " Renato";
				
						
				double n1, n2, n3, n4;
				
				double media;
				
				// notas do Antonio:
				n1=10;
				n2=8;
				n3=7;
				n4=9;
				
				media = (n1 + n2 + n3+n4) / 4;
				
				System.out.println("A media de  " + nome1  +" é " + media );
				
				
				// notas do Paulo:
				double n5, n6, n7, n8;
						n5=50;
